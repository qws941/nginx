# Windows Nginx 에어갭 환경 변수 예시

# Active Directory 도메인
AD_DOMAIN=company.local

# AD 보안 그룹
AD_ADMIN_GROUP=NginxAdministrators
AD_OPERATOR_GROUP=NginxOperators

# 서비스 계정
SERVICE_ACCOUNT=nginx-service

# Nginx 설치 경로
NGINX_HOME=C:\nginx
NGINX_CONF=C:\nginx\conf
NGINX_LOGS=C:\nginx\logs
NGINX_SSL=C:\nginx\ssl

# 웹 UI 설정
WEBUI_PORT=8080
WEBUI_HOST=127.0.0.1

# 백업 경로
BACKUP_PATH=D:\Backups\nginx

# 로그 보존 기간 (일)
LOG_RETENTION_DAYS=30

# SSL/TLS 설정
SSL_PROTOCOLS=TLSv1.2 TLSv1.3
SSL_CIPHERS=HIGH:!aNULL:!MD5

# 성능 튜닝
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1024

# 타임아웃 (초)
PROXY_CONNECT_TIMEOUT=60
PROXY_SEND_TIMEOUT=60
PROXY_READ_TIMEOUT=60
